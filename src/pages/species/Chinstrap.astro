---
import GraphicSpecies from "../../components/GraphicSpecies.astro";
import Layout from "../../layouts/Layout.astro";
---
<Layout>
    <nav class="species-nav">
        <a href="/" class="back-link">‚Üê Retour accueil</a>
        <div class="species-links">
            <a href="/species/Adelie" class="adelie">Adelie</a>
            <a href="/species/Gentoo" class="gentoo">Gentoo</a>
            <a href="/species/Chinstrap" class="active chinstrap">Chinstrap</a>
        </div>
    </nav>
    <GraphicSpecies species="Chinstrap" />
</Layout>

<style>
    @import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;500;700&display=swap');
    :root { font-family: 'Inter', sans-serif; }
    .species-nav { display: flex; justify-content: space-between; align-items: center; border-bottom: 1px solid #e0e0e0; }
    .back-link { color: #666; text-decoration: none; }
    .species-links { display: flex; gap: 15px; }
    .species-links a { padding: 8px 16px; text-decoration: none; border-radius: 4px; }
    .adelie.active { background-color: #ff6b6b; color: white; }
    .adelie:not(.active) { background-color: #ffe6e6; color: #ff6b6b; }
    .gentoo.active { background-color: #4ecdc4; color: white; }
    .gentoo:not(.active) { background-color: #e6f9f8; color: #4ecdc4; }
    .chinstrap.active { background-color: #feca57; color: #333; }
    .chinstrap:not(.active) { background-color: #fff8e6; color: #cc9900; }
</style>
